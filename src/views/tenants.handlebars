<div class="row">

  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">Add Tenant</div>
      <div class="card-body">
        <h5 class="card-title">Fill all required fields.</h5>
        <div class="col-lg-12">
          <button
            id="btnAddl"
            class="btn btn-primary"
            data-toggle="collapse"
            data-target="#tenantDiv"
          >Add Record</button>
        </div>
        <div class="col-lg-12 collapse" id="tenantDiv">
          <form
            accept-charset="utf-8"
            id="tenantForm"
            method="post"
            enctype="multipart/form-data"
          >

            <div class="mb-3">
              <label for="name" class="form-label required">Name</label>
              <input
                type="text"
                name="name"
                placeholder="Full Name"
                class="form-control"
                required=""
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label required">Email</label>
              <input
                type="email"
                name="email"
                class="form-control"
                required=""
              />
            </div>


            
             <div class="mb-3">
              <label for="phone" class="form-label">Phone Number </label>
              <input
                type="tel"
                name="phone"
                class="form-control"
               
              />
            </div>

             <div class="mb-3">
              <label for="apartment_description" class="form-label">Apartment Description <small></small> </label>
              <input
                type="text"
                name="apartment_description"
                class="form-control"
               
              />
            </div>
             <input type="hidden" name="landlord_id" value="{{user.id}}" />

           

            <div class="mb-3">
              <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-12 col-lg-12">
    <div class="card">
      <div class="card-header">All Tenants</div>
      <div class="card-body">
        <p class="card-title"></p>
        <div class="table-responsive">
          <table class="table table-hover" id="dataTables-tenant" width="100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone No.</th>
                <th>Apartment</th>
               
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {{#each tenants}}
                <tr>
                  <td>{{math @index "+" 1}}</td>
                  <td>{{this.name}}</td>
                  <td>{{this.email}}</td>
                  <td>{{this.phone}}</td>
                  <td>{{this.apartment_description}}</td>
                   <td>{{#if this.status}}
                      Active
                     {{else}}
                      Deactivated
                     {{/if}}

                   </td>
                   <td>{{this.house_number}} {{this.street_name}}</td>
                    <td>{{this.guard_id}}</td>
                  <td><button
                      class="btn btn-primary edit-tenant"
                      data-name="{{this.name}}"
                      data-email="{{this.email}}"
                      data-phone="{{this.phone}}"
                      data-apartment="{{this.apartment_description}}"
                      data-status="{{this.status}}"
                      data-id="{{this.id}}"
                    ><i class="fas fa-edit"></i> Edit</button></td>
                  <td><button
                      class="btn btn-danger delete-tenant"
                      data-id="{{this.id}}"
                    ><i class="fas fa-trash"></i> Delete</button></td>

                    <td><button
                      class="btn btn-danger deactivate-tenant"
                      data-id="{{this.id}}"
                      {{#if this.status}}
                       data-type="deactivate"
                     {{else}}
                      data-type="activate"
                     {{/if}}
                      
                    ><i class="fas fa-ban"></i> {{#if this.status}}
                       Deactivate
                     {{else}}
                      Activate
                     {{/if}}</button></td>
                </tr>

              {{/each}}

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>

<button
  type="button"
  class="btn btn-danger hidden"
  data-toggle="modal"
  data-target="#form1"
  id="btnModal"
>
  See Modal with Form
</button>

<div
  class="modal fade"
  id="form1"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <h5 class="modal-title" id="exampleModalLabel1">Update Tenant</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="tenantFormUpdate" method="PUT" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="mb-3">
            <label for="name" class="form-label required">Name</label>
            <input
              type="text"
              name="name"
              placeholder="Full Name"
              class="form-control"
              required=""
              id="tenant_name"
            />
          </div>

          <div class="mb-3">
            <label for="email" class="form-label required">Email</label>
            <input
              type="email"
              name="email"
              id="email"
              class="form-control"
              required=""
            />

          </div>

           


            
             <div class="mb-3">
              <label for="phone" class="form-label">Phone Number </label>
              <input
                type="tel"
                name="phone"
                id="phone"
                class="form-control"
               
              />
            </div>

             <div class="mb-3">
              <label for="apartment_description" class="form-label">Apartment Description </label>
              <input
                type="text"
                name="apartment_description"
                id="apartment"
                class="form-control"
               
              />
            </div>
          <input type="hidden" name="id" id="recid" />

        </div>
        <div class="modal-footer border-top-0 d-flex justify-content-center">
          <button type="submit" class="btn btn-success">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>