<div class="row">

  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">Add User</div>
      <div class="card-body">
        <h5 class="card-title">Fill all required fields.</h5>
        <div class="col-lg-12">
          <button
            id="btnAddl"
            class="btn btn-primary"
            data-toggle="collapse"
            data-target="#userDiv"
          >Add Record</button>
        </div>
        <div class="col-lg-12 collapse" id="userDiv">
          <form
            accept-charset="utf-8"
            id="userForm"
            method="post"
            enctype="multipart/form-data"
          >

            <div class="mb-3">
              <label for="name" class="form-label required">Name</label>
              <input
                type="text"
                name="name"
                placeholder="Full Name"
                class="form-control"
                required=""
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label required">Email</label>
              <input
                type="email"
                name="email"
                class="form-control"
                required=""
              />
            </div>


             <div class="mb-3">
              <label for="type" class="form-label required">Role</label>
              <select
                type="type"
                name="type"
                class="form-control"
                required=""
              >
              <option value="" selected>--Select Role--</option>
              <option value="1">Administrator</option>
              <option value="2">Landlord</option>
              <option value="3">Guard</option>
              
              </select>

            </div>


            <div class="mb-3">
              <label for="house_number" class="form-label">House Number <small>(Fil this section landlord role )</small> </label>
              <input
                type="text"
                name="house_number"
                class="form-control"
               
              />
            </div>
             <div class="mb-3">
              <label for="street_name" class="form-label">Street Name <small>(Fil this section landlord role )</small> </label>
              <input
                type="text"
                name="street_name"
                class="form-control"
               
              />
            </div>

             <div class="mb-3">
              <label for="guard_id" class="form-label">Guard ID Number <small>(Fil this section guard role )</small> </label>
              <input
                type="text"
                name="guard_id"
                class="form-control"
               
              />
            </div>

            <div class="mb-3">
              <label for="password" class="form-label required">Password</label>
              <input
                type="password"
                name="password"
                class="form-control"
                required=""
              />
            </div>

            <div class="mb-3">
              <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-12 col-lg-12">
    <div class="card">
      <div class="card-header">All Users</div>
      <div class="card-body">
        <p class="card-title"></p>
        <div class="table-responsive">
          <table class="table table-hover" id="dataTables-user" width="100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Address</th>
                <th>Guard ID</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {{#each users}}
                <tr>
                  <td>{{math @index "+" 1}}</td>
                  <td>{{this.name}}</td>
                  <td>{{this.email}}</td>
                   <td>{{getType this.type}}</td>
                   <td>{{this.house_number}} {{this.street_name}}</td>
                    <td>{{this.guard_id}}</td>
                  <td><button
                      class="btn btn-primary edit-user"
                      data-name="{{this.name}}"
                      data-email="{{this.email}}"
                      data-type="{{this.type}}"
                      data-house="{{this.house_number}}"
                      data-street="{{this.street_name}}"
                      data-guard="{{this.guard_id}}"
                      data-id="{{this.id}}"
                    ><i class="fas fa-edit"></i> Edit</button></td>

                    <td>
                      {{#customIf this.type "2"}}
                        <button
                          class="btn btn-primary user-tenants"
                          data-id="{{this.id}}"
                        ><i class="fas fa-users"></i> Tenants</button>
                    {{/customIf}}
                    
                    </td>

                  <td><button
                      class="btn btn-danger delete-user"
                      data-id="{{this.id}}"
                    ><i class="fas fa-trash"></i> Delete</button></td>
                </tr>

              {{/each}}

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>

<button
  type="button"
  class="btn btn-danger hidden"
  data-toggle="modal"
  data-target="#form1"
  id="btnModal"
>
  See Modal with Form
</button>

<div
  class="modal fade"
  id="form1"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <h5 class="modal-title" id="exampleModalLabel1">Update User</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="userFormUpdate" method="PUT" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="mb-3">
            <label for="name" class="form-label required">Name</label>
            <input
              type="text"
              name="name"
              placeholder="Full Name"
              class="form-control"
              required=""
              id="user_name"
            />
          </div>

          <div class="mb-3">
            <label for="email" class="form-label required">Email</label>
            <input
              type="email"
              name="email"
              id="email"
              class="form-control"
              required=""
            />

          </div>

           <div class="mb-3">
              <label for="type" class="form-label required">Role</label>
              <select
                id="type"
                name="type"
               
                class="form-control"
                required=""
              >
              <option value="" selected>--Select Role--</option>
              <option value="1">Administrator</option>
              <option value="2">Landlord</option>
              <option value="3">Guard</option>
              
              </select>

            </div>
            <div class="mb-3">
              <label for="house_number" class="form-label">House Number <small>(Fil this section landlord role )</small> </label>
              <input
                type="text"
                name="house_number"
                id="house_number"
                class="form-control"
               
              />
            </div>

              <div class="mb-3">
              <label for="street_name" class="form-label">Street Name <small>(Fil this section landlord role )</small> </label>
              <input
                type="text"
                name="street_name"
                id="street_name"
                class="form-control"
               
              />
            </div>

             <div class="mb-3">
              <label for="guard_id" class="form-label">Guard ID Number <small>(Fil this section guard role )</small> </label>
              <input
                type="text"
                name="guard_id"
                id="guard_id"
                class="form-control"
               
              />
            </div>

          <input type="hidden" name="id" id="recid" />

        </div>
        <div class="modal-footer border-top-0 d-flex justify-content-center">
          <button type="submit" class="btn btn-success">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>