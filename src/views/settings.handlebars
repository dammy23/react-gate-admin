<div class="row">

  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">Add Setting</div>
      <div class="card-body">
        <h5 class="card-title">Fill all required fields.</h5>
        <div class="col-lg-12">
          <button
            id="btnAddl"
            class="btn btn-primary"
            data-bs-toggle="collapse"
            data-bs-target="#settingDiv"
          >Add Record</button>
        </div>
        <div class="col-lg-12 collapse" id="settingDiv">
          <form
            accept-charset="utf-8"
            id="settingForm"
            method="post"
            enctype="multipart/form-data"
          >

            <div class="mb-3">
              <label for="name" class="form-label required">Name</label>
              <input
                type="text"
                name="name"
                placeholder="Full Name"
                class="form-control"
                required=""
              />
            </div>
            <div class="mb-3">
              <label for="value" class="form-label required">Value</label>
              <input
                type="text"
                name="value"
                class="form-control"
                required=""
              />
            </div>

            

            <div class="mb-3">
              <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-12 col-lg-12">
    <div class="card">
      <div class="card-header">All Settings</div>
      <div class="card-body">
        <p class="card-title"></p>
        <div class="table-responsive">
          <table class="table table-hover" id="dataTables-setting" width="100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Value</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {{#each settings}}
                <tr>
                  <td>{{math @index "+" 1}}</td>
                  <td>{{this.name}}</td>
                  <td>{{this.value}}</td>
                  <td><button
                      class="btn btn-primary edit-setting"
                      data-name="{{this.name}}"
                      data-value="{{this.value}}"
                      data-id="{{this.id}}"
                    ><i class="fas fa-edit"></i> Edit</button></td>
                  <td><button
                      class="btn btn-danger delete-setting"
                      data-id="{{this.id}}"
                    ><i class="fas fa-trash"></i> Delete</button></td>
                </tr>

              {{/each}}

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>

<button
  type="button"
  class="btn btn-danger hidden"
  data-bs-toggle="modal"
  data-bs-target="#form1"
  id="btnModal"
>
  See Modal with Form
</button>

<div
  class="modal fade"
  id="form1"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <h5 class="modal-title" id="exampleModalLabel1">Update Setting</h5>
        <button
          type="button"
          class="close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="settingFormUpdate" method="PUT" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="mb-3">
            <label for="name" class="form-label required">Name</label>
            <input
              type="text"
              name="name"
              placeholder="Full Name"
              class="form-control"
              required=""
              id="setting_name"
            />
          </div>

          <div class="mb-3">
            <label for="value" class="form-label required">Value</label>
            <input
              type="text"
              name="value"
              id="value"
              class="form-control"
              required=""
            />
          </div>
          <input type="hidden" name="id" id="recid" />

        </div>
        <div class="modal-footer border-top-0 d-flex justify-content-center">
          <button type="submit" class="btn btn-success">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>